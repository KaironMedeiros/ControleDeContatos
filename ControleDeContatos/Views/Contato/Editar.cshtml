@model ContatoModel 
@{
    ViewData["Title"] = "Editar contato";
}
<div class="text-center">

    <h1 class="display-4">Editar</h1>

    <div>
        <form asp-controller="Contato" asp-action="Alterar">

            <input type="hidden" asp-for="Id"/>
            <div class="mb-3">
                <label class="form-label">Nome</label>
                <input type="text" asp-for="Nome" class="form-control">
                @Html.ValidationMessageFor(x => x.Nome)
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" asp-for="Email" class="form-control">
                @Html.ValidationMessageFor(x => x.Email)
            </div>
            <div class="mb-3">
                <label class="form-label">Celular</label>
                <input type="number" asp-for="Celular" class="form-control">
                @Html.ValidationMessageFor(x => x.Celular)
            </div>
            <button type="submit" class="btn btn-primary btn-block">Alterar</button>
            <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
        </form>
    </div>

</div>